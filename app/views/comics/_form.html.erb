<%= form_for @comic, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :series_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :series_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :publish_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :publish_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sold, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :sold, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_content_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :image_file_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :image_updated_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comic_path, :class => 'btn' %>
  </div>
<% end %>
