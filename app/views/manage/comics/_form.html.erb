<%= form_for [:manage, @comic], :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <div class="control-group">
    <%= f.label :series_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :series_id, @series.map {|s| [s.name, s.id] }, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :publish_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :publish_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sold, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :sold, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image, :class => 'file_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                manage_comics_path, :class => 'btn' %>
  </div>
<% end %>
