= will_paginate @posts
%br
- @posts.each do |post|
  .well
    .pull-right= "Posted #{time_ago_in_words(post.created_at)} ago"
    %h2= link_to post.title, post
    %p= truncate post.content, :length => 320
    %br
    .pull-right= link_to "Permalink", archived_blog_url(post.created_at.year, post.created_at.month, post.created_at.day)
%br
